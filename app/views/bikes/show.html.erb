<div class="panel default-default">
  <div class="panel-body">
    <!-- Image -->
    <div class="row">
      <div class="col-md-12">
        <%= image_tag @photos[0].image.url(), class: "img-responsive" %>
      </div>
    </div>

      <br>


      <!-- Main info -->
      <div class="row">
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-3 text-center">
              <%= image_tage avatar_url(@bike.user), class: "img-circle avatar-large" %>
              <%= @bike.user.fullname %>
            </div>

            <div class="col-md-9">
              <h4><%= @bike.title %></h4>
            </div>
            <div class="row text-center row-space-1">
              <div class="col-sm-3">
                <i class="fa fa-bicycle"></i>
              </div>
              <div class="col-sm-3">
                <i class="fa fa-tachometer"></i>
              </div>
              <div class="col-sm-3">
                <i class="fa fa-cogs"></i>
              </div>
              <div class="col-sm-3">
                <i class="fa fa-magic"></i>
              </div>
            </div>

            <div class="row text-center">
              <div class="col-sm-3">
                <%= @bike.category %>
              </div>
              <div class="col-sm-3">
                <%= @bike.speed %>
              </div>
              <div class="col-sm-3">
                <%= @bike.chain_wheel %>
              </div>
              <div class="col-sm-3">
                <%= @bike.accessories %> <%= @bike.accessories > 1? "Accessories" : "Accessory" %>
            </div>
           </div>
          </div>
         </div>

        </div>


      <!-- About -->
      <div class="row">
        <div class="col-md-12">
          <h2>About this listing</h2>
          <p><%= @bike.description %></p>
        </div>
      </div>

<!--Closure  -->
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <ul class= "sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Bikes", bikes_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Rides", reservations_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
      Your wonderful bikes !
      </div>
      <div class="panel-body">
        <% @bikes.each do |bike| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag bike.photos[0].image.url(:thumb) if bike.photos.length > 0 %>
            </div>
            <div class="col-md-7">
              <h4><%= bike.title %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to "Show", bike_path(bike), class: "btn btn-primary" %>
              <%= link_to "Edit", edit_bike_path(bike), class: "btn btn-primary" %>
              <%= link_to bike_path(bike), method: :delete do %>
              <i class="fa fa-times fa-2x delete_cross"></i>
              <% end %>
            </div>

          </div>
          <hr>
        <% end %>

      </div>
    </div>
  </div>
</div>
